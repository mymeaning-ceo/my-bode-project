<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>회원정보 수정</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">
</head>
<body class="bg-light">
  <%- include('nav.ejs') %>
  <div class="container my-5" style="max-width:500px;">
    <h2 class="mb-4 fw-bold">회원정보 수정</h2>
    <form action="/profile" method="POST">
      <div class="mb-3">
        <label class="form-label">아이디</label>
        <input type="text" class="form-control" value="<%= 유저.username %>" disabled>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= 유저.email || '' %>">
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">연락처</label>
        <input type="text" class="form-control" id="phone" name="phone" value="<%= 유저.phone || '' %>">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">새 비밀번호</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <div class="mb-3">
        <label for="password2" class="form-label">비밀번호 확인</label>
        <input type="password" class="form-control" id="password2" name="password2">
      </div>
      <button class="btn btn-primary">수정하기</button>
    </form>
  </div>
  <script>
    document.querySelector('form').addEventListener('submit', function(e){
      const pw = document.getElementById('password').value;
      const pw2 = document.getElementById('password2').value;
      if(pw && pw !== pw2){
        alert('비밀번호가 일치하지 않습니다.');
        e.preventDefault();
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
