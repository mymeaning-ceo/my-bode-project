<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>재고 관리</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">
</head>
<body class="bg-light">

  <!-- 공통 네비게이션 -->
  <%- include('nav.ejs') %>

  <div class="container my-5">
    <h2 class="mb-4 fw-bold">📦 재고 관리</h2>

    <!-- 업로드 후 메시지 -->
    <% if (성공메시지) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= 성공메시지 %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- 파일 업로드 + 초기화 -->
    <div class="d-flex flex-wrap gap-2 mb-4">
      <form action="/coupang/upload" method="POST" enctype="multipart/form-data" class="d-flex flex-wrap gap-2">
        <input type="file" name="excelFile" accept=".xlsx, .xls" class="form-control" required>
        <button type="submit" class="btn btn-success">엑셀 업로드</button>
      </form>

      <form action="/coupang/delete-all" method="POST" onsubmit="return confirm('정말 모든 데이터를 삭제하시겠습니까?')">
        <button type="submit" class="btn btn-danger">데이터 초기화</button>
      </form>
    </div>

    <!-- 검색 -->
    <form action="/coupang/search" method="GET" class="input-group mb-4">
      <input type="text" name="keyword" class="form-control" placeholder="상품명, 옵션명 또는 옵션ID 입력">
      <button class="btn btn-outline-primary" type="submit">검색</button>
    </form>

    <% if (결과 && 결과.length > 0) { %>
      <p class="text-muted">🔎 총 <strong><%= 결과.length %></strong>건의 결과가 있습니다.</p>
    <% } %>

    <!-- 테이블 -->
    <% const 한글 = {
      'Option ID': '옵션ID',
      'Product name': '상품명',
      'Option name': '옵션명',
      'Orderable quantity (real-time)': '주문 가능 수량(실시간)',
      'Recent sales (Excluding bundle sales) Last 30 days': '최근 30일 판매금액',
      'Recent sales quantity Last 30 days': '최근 30일 판매량'
    }; %>

    <div class="table-responsive">
      <table class="table table-bordered table-hover bg-white align-middle">
        <thead class="table-light text-center">
          <% if (결과 && 결과.length > 0) { %>
            <tr>
              <th>번호</th>
              <% for (const key in 결과[0]) { %>
                <% if (key !== '_id') { %>
                  <th><%= 한글[key] || key %></th>
                <% } %>
              <% } %>
            </tr>
          <% } else { %>
            <tr><th>📂 No Data</th></tr>
          <% } %>
        </thead>
        <tbody>
          <% if (결과 && 결과.length > 0) { %>
            <% 결과.forEach((행, index) => { %>
              <tr>
                <td class="text-center"><%= index + 1 %></td>
                <% for (const key in 행) { %>
                  <% if (key !== '_id') { %>
                    <td>
                      <%= typeof 행[key] === 'number' ? 행[key].toLocaleString('ko-KR') : 행[key] %>
                    </td>
                  <% } %>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="100%" class="text-center text-muted">📭 재고가 없습니다.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>