<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>접근 권한 설정</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../nav.ejs') %>
  <div class="container my-4">
    <h1 class="mb-3">뷰 접근 권한</h1>
    <form action="/admin/permissions" method="post">
           <table class="table">
        <thead>
          <tr>
            <th>View</th>
            <th>Login Required</th>
            <th>Allowed Users</th>
          </tr>
        </thead>
        <tbody>
          <% views.forEach(function(v) { const perm = permissions[v] || {}; %>
            <tr>
              <td><%= v %></td>
              <td>
                <input class="form-check-input" type="checkbox" name="view" value="<%= v %>" id="v_<%= v %>" <%= perm.loginRequired ? 'checked' : '' %>>
              </td>
              <td>
                <select name="user_<%= v %>" multiple class="form-select">
                  <% users.forEach(function(u) { %>
                    <option value="<%= u._id %>" <%= (perm.allowedUsers || []).includes(String(u._id)) ? 'selected' : '' %>><%= u.username %></option>
                  <% }) %>
                </select>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <button class="btn btn-primary mt-3">저장</button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>