              <h5 class="mb-2">배너 <%= i %></h5>
              <% if (img) { %>
                <img src="<%= img %>" class="img-fluid mb-2" alt="banner <%= i %>">
              <% } else { %>
                <p class="text-muted">현재 이미지가 없습니다.</p>
              <% } %>
