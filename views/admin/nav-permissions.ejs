<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>네비게이션 권한 설정</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../nav.ejs') %>
  <div class="container my-4">
    <h1 class="mb-3">관리자 메뉴 권한 설정</h1>
    <form action="/admin/nav" method="post" class="mb-4">
      <div class="mb-3">
        <label class="form-label">관리자 아이디</label>
        <input type="text" name="username" class="form-control" required>
      </div>
      <% navItems.forEach(function(it){ %>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" name="navItem" value="<%= it %>" id="nav_<%= it %>">
          <label class="form-check-label" for="nav_<%= it %>"><%= it %></label>
        </div>
      <% }) %>
      <button class="btn btn-primary mt-3">저장</button>
    </form>
    <h2 class="mb-3">현재 권한</h2>
    <ul>
      <% Object.keys(perms).forEach(function(u){ %>
        <li><strong><%= u %></strong>: <%= perms[u].join(', ') %></li>
      <% }) %>
    </ul>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
